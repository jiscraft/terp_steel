Ext.define('Terp.view.ma.convertClassId.convertClassIdModel', {
    extend: 'Ext.app.ViewModel',
    alias: 'viewmodel.convertClassId',

    requires: [
        'Ext.data.proxy.Ajax',
        'Ext.data.reader.Json'
    ],

    stores: {
        convertClassId_form1_store :{
            config:{
                proxy: {
                    type :'ajax',
                    url:'../ServerPage/@@/@@_@@@@@.jsp',
                    params:{

                    },
                    reader :{
                        type:'json',
                        rootProperty: 'data',
                        keepRawData: true
                    }
                },
                autoLoad: false
            }

        }
    },

    data: {
        /* This object holds the arbitrary data that populates the ViewModel and is then available for binding. */
    }
});




/**
 * Created by jiscraft on 2016-02-17.
 */
Ext.define('Terp.view.ma.convertClassId.convertClassIdController', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.convertClassId',

    requires: [
        'Terp.view.tsoft.common.contactUser.ContactUser'
    ],

    commonFn: '',
    convertClassId_headbutton:'',
    convertClassId_searchform :'',
    convertClassId_form1 :'',
    convertClassId_form1_store :'',


    init: function() {
        commonFn = Terp.app.getController('TerpCommon');

        convertClassId_headbutton = this.lookupReference('convertClassId_headbutton');
        convertClassId_searchform = this.lookupReference('convertClassId_searchform');

        convertClassId_form1 = this.lookupReference('convertClassId_form1');
        convertClassId_form1_store =  this.getViewModel().getStore('convertClassId_form1_store') ;

        convertClassId_form1.setReadOnly(true);
        this.onInitValue();

    },

    onInitValue : function(){
        commonFn.setCommonCode(this.lookupReference('convertClassId_form1_combo1') ,'FI010');
    },



    onSelect : function(){
        var me = this;

        //조회조건을 체크
        var searchFormValue = convertClassId_searchform.down('[name=cd_p]').getValue();
        if ( searchFormValue == '' || searchFormValue == null ){
            commonFn.toastMessage('조회조건을 입력한뒤 조회하세요','t');
            return;
        }

        var sendDataJsonEncode = convertClassId_searchform.makeSendData('r');
        convertClassId_form1_store.load({
            params :{
                sendData : sendDataJsonEncode
            },
            callback : me.onSelctCallback,
            scope : me
        });
    },


    onSelctCallback : function(records, operation , success){

        if(success == true ){
            if  ( records.length < 1 ){
                convertClassId_form1.clearForm();

            }else {
                convertClassId_form1.loadRecord(records[0]);
                //폼에 HELP FIELD 네임값들 바인딩 ( 바인드한뒤 리드온리설정을 해야 합니다 )
                commonFn.setDataBindHelpBox(convertClassId_form1, 'cd_p_parent', records[0].data.cd_p_parent, records[0].data.nm_p_parent);
                commonFn.setDataBindHelpBox(convertClassId_form1, 'cd_o_encharge', records[0].data.cd_o_encharge, records[0].data.nm_o_encharge);
                commonFn.setDataBindHelpBox(convertClassId_form1, 'cd_e_encharge', records[0].data.cd_e_encharge, records[0].data.nm_e_encharge);
                convertClassId_form1.setReadOnly(true);
            }
        }else{

            var errorMsg = this.getViewModel().getStore('convertClassId_grid1_store').getProxy().getReader().rawData.msg;
            commonFn.errorHandling(errorMsg);
        }
    },

    onModify : function(){
        convertClassId_form1.setReadOnly(false);
        convertClassId_headbutton.down('[name = savebutton]').setDisabled(false);

    },


    onSave : function(){
        var me = this;

        var sendDataJsonEncode = convertClassId_form1.makeSendData('s');

        Ext.Ajax.request({
            url :'../ServerPage/@@/@@_@@@@.jsp' ,
            params :{
                sendData : sendDataJsonEncode
            },
            success :function(res){
                var obj = Ext.JSON.decode(res.responseText);
                if(obj.success == true){
                    commonFn.toastMessage('저장성공','t');
                    convertClassId_form1.setReadOnly(true);
                    convertClassId_headbutton.down('[name = savebutton]').setDisabled(true);

                    /* 등록하는 메뉴일경우
                    convertClassId_searchform.down('[name=cd_p]').setValue(convertClassId_form1.down('[name=cd_p]').getValue());
                    */
                    me.onSelect();

                }else{
                    var errorMsg = obj.msg;
                    commonFn.errorHandling(errorMsg);
                }
            },
            fail : function(){
                commonFn.toastMessage('"데이타처리중 오류가 발생했습니다','t');
            }
        });
    },


    onInsert : function(){
        convertClassId_searchform.clearForm();
        convertClassId_form1.clearForm();
        this.onModify();

        convertClassId_form1.down('[name=fg_p]').setValue('0');
        convertClassId_form1.down('[name=yn_use]').setValue('Y');
        convertClassId_form1.down('[name=fg_cowork]').setValue('9');
        convertClassId_form1.down('[name=yn_jeonja]').setValue('Y');
    },


    onDelete : function(){
        var me = this;

        var sendDataJsonEncode = convertClassId_form1.makeSendData('d');

        Ext.Ajax.request({
            url :'../ServerPage/@@/@@_@@@@.jsp' ,
            params :{
                sendData : sendDataJsonEncode
            },
            success :function(res){
                var obj = Ext.JSON.decode(res.responseText);
                if(obj.success == true){
                    commonFn.toastMessage('데이타 삭제성공','t');
                    convertClassId_form1.setReadOnly(true);
                    convertClassId_searchform.clearForm();
                    convertClassId_form1.clearForm();


                }else{
                    var errorMsg = obj.msg;
                    commonFn.errorHandling(errorMsg);
                }
            },
            fail : function(){
                commonFn.toastMessage('데이타처리중 에러발생','t');
            }
        });
    }



});