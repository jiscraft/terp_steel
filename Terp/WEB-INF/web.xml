<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <description>JDNI(jdbc/terp)</description>
        <res-ref-name>jdbc/terp</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <listener>
        <listener-class>kr.terp.TobeSessionManager</listener-class>
    </listener>

    <listener>
        <listener-class>kr.terp.session.WebSessionListener</listener-class>
    </listener>
    <filter>
        <filter-name>WebSessionFilter</filter-name>
        <filter-class>kr.terp.session.WebSessionFilter</filter-class>
        <init-param>
            <param-name>GateUrl</param-name>
            <param-value>/index.html</param-value>
        </init-param>
        <init-param>
            <param-name>AvoidUrls</param-name>
            <param-value>userLogin.jsp, userLogout.jsp, userLoginStatus.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>WebSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>SiteId</param-name>
        <param-value>ATECTERP</param-value>
    </context-param>

<!--    서버의 저장위치에 따라 설정을 바꾸어야 함-->
    <context-param>
        <param-name>localFileServer</param-name>
        <param-value>C:\TERP\Files\terp_files\</param-value>
    </context-param>


    <context-param>
        <param-name>localFileServerMaxUploadSize</param-name>
        <param-value>200</param-value>
    </context-param>

    <env-entry>
        <env-entry-name>StorageFolder</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>TERP\Files\terp_files</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>StorageDrives</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:, D:, E:</env-entry-value>
    </env-entry>

</web-app>